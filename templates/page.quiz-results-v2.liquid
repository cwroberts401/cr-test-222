  width: 100%;
  height: 27px;
  display: block !important;
}

button:disabled,
button[disabled]{
  cursor: initial;
  color: rgba(18, 18, 18, 0.6);
  border: solid 1px rgba(18, 18, 18, 0.6);

}

button:disabled,
button[disabled]:hover {
  border: solid 1px rgba(18, 18, 18, 0.6);
}


@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
</style>