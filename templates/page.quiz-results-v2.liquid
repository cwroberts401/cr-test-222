<!-- Loader and Products Container -->
<h1> Your Quiz Results </h1>
<div id="loader" class="loader">{% render 'loading-spinner', class: 'run'%}</div>
<div id="hero-container" class="hero-container"></div>
<div id="products-container" class="product-grid"></div>

<!-- Add All to Cart Button -->
<button class="add-to-cart-btn" style="display: none; min-width: 50%; margin: 10px auto 100px; background-color: black; color: white;" id="addAllToCart" style="margin: 20px; display: none;">Add All to Cart</button>

<script>
  
document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const productHandles = urlParams.get('product_handles').split(',');
    const rowLength = parseInt(urlParams.get('row_length'), 10) || 3;
    const hideOos = urlParams.get('hide_oos') === "true";
    let showHero = urlParams.get('show_hero') === "true";

    const productsContainer = document.getElementById('products-container');
    const heroContainer = document.getElementById('hero-container');
    const loader = document.getElementById('loader');
    const addAllToCartButton = document.getElementById('addAllToCart');

    // Ensure all product ids are stored for the 'Add All to Cart' functionality
    let allVariantIds = [];

    // Function to fetch product data
    function fetchProduct(handle) {
        return fetch(`/products/${handle}.js`)
            .then(response => response.json())
            .then(product => {
                if (!product.available && hideOos) {
                    return null; // Return null if product should be skipped
                }
                return { handle, product };
            });
    }

    // Function to update the displayed variant
    function updateVariant(variantId, productHandle, variantTitle, variantPrice, imageUrl) {
        const productInfo = document.querySelector(`.product-card[data-handle="${productHandle}"]`);
        productInfo.querySelector('.product-image').src = imageUrl;
        productInfo.querySelector('.product-image').alt = variantTitle;
        productInfo.querySelector('.price').textContent = `$${(variantPrice / 100).toFixed(2)}`;
    }

    // Add all to cart function
    function addAllToCart() {
        allVariantIds.forEach(id => {
            addToCart(id, 1);
        });
    }

    // Add to cart function
    function addToCart(variantId, quantity) {
        fetch('/cart/add.js', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                id: variantId,
                quantity: quantity
            })
        })
        .then(response => response.json())
        .then(data => alert('Added to cart!'))
        .catch(error => console.error('Error adding item to cart:', error));
    }

    // Handle all clicks for variant selection and add to cart using delegation
    document.body.addEventListener('click', function(event) {
        if (event.target.matches('.variant-btn')) {
            const { variantId, handle, title, price, imageUrl } = event.target.dataset;
            updateVariant(variantId, handle, title, price, imageUrl);
        } else if (event.target.matches('.add-to-cart-btn')) {
            const { variantId } = event.target.dataset;
            addToCart(variantId, 1);
        } else if (event.target.matches('#addAllToCart')) {
            addAllToCart();
        }
    });

    // Fetch all products
    Promise.all(productHandles.map(handle => fetchProduct(handle)))
        .then(results => {
            results.forEach(result => {
                if (!result) return;
                const { handle, product } = result;
                const container = showHero && handle === productHandles[0] ? heroContainer : productsContainer;
                if (showHero && handle === productHandles[0]) {
                    showHero = false;
                }

                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.setAttribute('data-handle', handle);
                productCard.style.flexBasis = `calc(100% / ${rowLength} - 20px)`;

                let variantButtons = product.variants.map(variant =>
                    `<button class="variant-btn" data-variant-id="${variant.id}" data-handle="${handle}" data-title="${variant.title}" data-price="${variant.price}" data-image-url="${product.images[0]}">${variant.title}</button>`
                ).join('');

                productCard.innerHTML = `
                    <a href="/products/${handle}">
                        ${product.available ? '' : '<div class="sold-out"><p>sold out</p></div>'}
                        <img src="${product.images[0]}" alt="${product.title}" class="product-image">
                    </a>
                    <div class="card-info">
                        <h2 class="product-title">${product.title}</h2>
                        <p class="price">$${(product.variants[0].price / 100).toFixed(2)}</p>
                        ${product.variants.length > 1 ? variantButtons : "<div class='variant-placeholder'></div>"}
                        <button class="add-to-cart-btn" data-variant-id="${product.variants[0].id}" ${product.available ? '' : 'disabled'}>Add to Cart</button>
                    </div>
                `;

                container.appendChild(productCard);
                allVariantIds.push(product.variants[0].id);
            });

            loader.style.display = 'none';
            addAllToCartButton.style.display = 'block';
        })
        .catch(error => {
            console.error('Error loading products:', error);
        });
});

</script>


<style>
